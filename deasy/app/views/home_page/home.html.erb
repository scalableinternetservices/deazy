<div class="demo">
<h1>DEasy</h1>
<h4>Dating Made Easy.</h4>
<% if user_signed_in? %>
<%= form_tag("/home_page/search", method: "get") do %>
  <div class="form-group">
    <%= label_tag(:q, "Where do you want to go on a date?") %>
  </div>
  <div class="form-group">
    <%= select_tag(:search, options_for_select([ "Resturant", "Bar", "Sporting Event", "Concert" ], "Resturant")) %>
  </div>
  <div class="form-group">
    <%= label_tag(:city, "What City?") %>
  </div>
  <div>
  <%= text_field_tag(:city) %>
  </div>
    <div class="form-group">
    <%= label_tag(:miles, "How far do you want(Miles)?") %>
  </div>
  <div class="form-group">
    <%= select_tag(:miles, options_for_select([ "5", "15", "25" ], "5")) %>
  </div>
  <div class="form-group">
    <%= submit_tag("Search") %>
  </div>
<% end %>
<% else %>
<p>If you don't have an acoout please sign up, other wise sign in</p>

<% end %>
</div>

